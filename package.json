{
    "name": "SakalSense",
    "version": "1.0.0",
    "description": "SakalSense monorepo (frontend, backend, shared core)",
    "private": true,
    "type": "module",
    "packageManager": "pnpm@10.28.2",
    "author": "Aaditya Hasabnis",
    "license": "ISC",
    "keywords": [],
    "scripts": {
        "dev": "npx concurrently -k -n Backend,Frontend -c blue,magenta \"pnpm backend\" \"pnpm frontend\"",
        "frontend": "pnpm --filter @sakalsense/frontend dev",
        "backend": "tsx watch --env-file=apps/backend/.env.local apps/backend/src/index.ts",
        "build": "pnpm -r build",
        "lint": "pnpm -r lint",
        "format": "pnpm -r format",
        "type-check": "pnpm -r type-check",
        "deps:up": "pnpm up -r -L",
        "deps:update": "pnpm -r update --latest",
        "audit": "pnpm audit --audit-level=moderate",
        "clean": "pnpm -r clean && rm -f .eslintcache && pnpm store prune",
        "create:sadmin": "tsx --env-file=apps/backend/.env.local apps/backend/scripts/create-administrator.ts"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.50.1",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.7.4",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
