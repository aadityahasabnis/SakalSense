{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/config": ["src/config"],
            "@/config/*": ["src/config/*"],
            "@/db": ["src/db"],
            "@/db/*": ["src/db/*"],
            "@/middlewares": ["src/middlewares"],
            "@/middlewares/*": ["src/middlewares/*"],
            "@/routes": ["src/routes"],
            "@/routes/*": ["src/routes/*"],
            "@/models": ["src/models"],
            "@/models/*": ["src/models/*"],
            "@/services": ["src/services"],
            "@/services/*": ["src/services/*"],
            "@/schemas": ["src/schemas"],
            "@/schemas/*": ["src/schemas/*"],
            "@/interfaces": ["src/interfaces"],
            "@/interfaces/*": ["src/interfaces/*"],
            "@/constants": ["src/constants"],
            "@/constants/*": ["src/constants/*"],
            "@/utils": ["src/utils"],
            "@/utils/*": ["src/utils/*"]
        }
    },
    "include": ["src"],
    "ts-node": {
        "esm": true
    }
}
